            <Insets />
         </VBox.margin>
      </Label>
      <TextField fx:id="nameField" prefHeight="30.0" prefWidth="200.0" promptText="Type your name here">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="warning" opacity="0.0" text="*username field is required " textFill="RED">
         <font>
            <Font name="Georgia" size="10.0" />
         </font>
      </Label>
      <Label text="Select the difficulty">
         <font>
            <Font name="Georgia Bold" size="24.0" />
         </font>
      </Label>
      <CheckBox fx:id="checkEasy" mnemonicParsing="false" prefHeight="20.0" prefWidth="100.0" text="Easy">
         <font>
            <Font name="Georgia Italic" size="12.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" top="10.0" />
         </VBox.margin>
      </CheckBox>
      <CheckBox fx:id="checkMedium" mnemonicParsing="false" prefHeight="20.0" prefWidth="100.0" text="Medium">
         <font>
            <Font name="Georgia Italic" size="12.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin>
      </CheckBox>
      <CheckBox fx:id="checkHard" mnemonicParsing="false" prefHeight="20.0" prefWidth="100.0" text="Hard">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
         <font>
            <Font name="Georgia Italic" size="12.0" />
         </font>
      </CheckBox>
      <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStart" text="Start">
         <font>
            <Font name="Georgia Bold Italic" size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>

